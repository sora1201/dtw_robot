<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="model" default="$(find dtw_robot)/xacro/dtw_robot.xacro" />
    <arg name="rvizconfig" default="$(find dtw_robot)/rviz/multi_robot.rviz" />  

    <!-- gazebo world -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find dtw_robot)/worlds/room"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="false"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>

    <group ns="dtw_robot1">
        <arg name="robot_name" value="dtw_robot1"/>
        <param name="robot_description" command="$(find xacro)/xacro $(arg model) --inorder robot_name:=$(arg robot_name)"/>
        <arg name="init_pose" value="-x 0.0 -y 0.0"/>
        <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -model $(arg robot_name) $(arg init_pose)"/>
        <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen">
            <param name="tf_prefix" value="$(arg robot_name)"/>
            <remap from="joint_states" to="/$(arg robot_name)/joint_states"/>
        </node>
    </group>
    <group ns="dtw_robot2">
        <arg name="robot_name" value="dtw_robot2"/>
        <param name="robot_description" command="$(find xacro)/xacro $(arg model) --inorder robot_name:=$(arg robot_name)"/>
        <arg name="init_pose" value="-x 0.0 -y 1.0"/>
        <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -model $(arg robot_name) $(arg init_pose)"/>
        <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen">
            <param name="tf_prefix" value="$(arg robot_name)"/>
            <remap from="joint_states" to="/$(arg robot_name)/joint_states"/>
        </node>
    </group>

    <node pkg="rviz" type="rviz" name="rviz" args="-d $(arg rvizconfig)" required="true"/>
</launch>